<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:src="@drawable/detail_picture"
        android:id = "@+id/welfare_info_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/welfare_info_img"
        app:layout_constraintBottom_toTopOf="@id/btn_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="560dp">
            <LinearLayout
                android:background="@drawable/tv_main_info_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:text = "복지 상세"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text ="상세한 내용이 이곳에 들어갑니다"
                    android:fontFamily="@font/font"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="12sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/tv_main_info_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:text = "지원 대상"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text ="상세한 내용이 이곳에 들어갑니다"
                    android:fontFamily="@font/font"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="12sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/tv_main_info_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:text = "선정 기준"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text ="상세한 내용이 이곳에 들어갑니다"
                    android:fontFamily="@font/font"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="12sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/tv_main_info_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:text = "예제"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text ="상세한 내용이 이곳에 들어갑니다"
                    android:fontFamily="@font/font"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="12sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/tv_main_info_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:text = "예제"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text ="상세한 내용이 이곳에 들어갑니다"
                    android:fontFamily="@font/font"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="12sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_sign"
        android:fontFamily="@font/font"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="6sp"
        android:backgroundTint="#20beab"
        android:text = "바로 신청하기"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>